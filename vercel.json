{
  "rewrites": [
    {
      "source": "/vendors/(?!.*\\.json$)(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/((?!images|videos|hero|favicon|robots\\.txt|manifest\\.json|.*\\.json).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/hero/index.json",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/(images|vendors|videos)/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
